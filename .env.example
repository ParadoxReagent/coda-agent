# Database
# Note: When running via Docker, DATABASE_URL is overridden automatically
# to use the postgres container. This value is used for local development only.
DATABASE_URL=postgresql://coda:coda@localhost:5432/coda
POSTGRES_PASSWORD=coda

# Redis
# Note: When running via Docker, REDIS_URL is overridden automatically
# to use the redis container. This value is used for local development only.
REDIS_URL=redis://localhost:6379

# Discord
DISCORD_BOT_TOKEN=
DISCORD_CHANNEL_ID=
DISCORD_ALLOWED_USER_IDS=

# LLM Providers (set in config.yaml or override here)
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
OPENAI_API_KEY=
OPENROUTER_API_KEY=

# Gmail OAuth2 (preferred over IMAP)
GMAIL_OAUTH_CLIENT_ID=
GMAIL_OAUTH_CLIENT_SECRET=
GMAIL_OAUTH_REDIRECT_PORT=3000
GMAIL_USER=

# Legacy IMAP (fallback if OAuth not configured)
# IMAP_HOST=imap.gmail.com
# IMAP_USER=your-email@gmail.com
# IMAP_PASS=your-app-password

# Memory Service
MEMORY_API_KEY=

# Application
NODE_ENV=development
LOG_LEVEL=info
CONFIG_PATH=./config/config.yaml
